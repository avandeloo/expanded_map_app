<div id="new_form" class="well">
  <h1>Login</h1>
  <br>
  <%= form_tag '/login', method: :post do %>
    <div>
      <%= label_tag :email %>:
      <%= text_field_tag :email %>
    </div>
    <div>
      <%= label_tag :password %>:
      <%= password_field_tag :password %>
    </div>
    <br>
    <div>
      <%= button_tag "Login", :name => "Submit", :class => 'btn btn-info' %> <%= button_tag "Sign Up", :name => "Signup", :class => 'btn btn-primary' %>  
    </div>
  <% end %>
</div>