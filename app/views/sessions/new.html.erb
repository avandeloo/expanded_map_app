<div class="well">
  <h1>Login</h1>
  <%= form_tag '/login', method: :post do %>
    <div>
      <%= label_tag :email %>:
      <%= text_field_tag :email %>
    </div>
    <div>
      <%= label_tag :password %>:
      <%= password_field_tag :password %>
    </div>
    <div id="loginBtn">
      <%= submit_tag "Submit" %>
    </div>
  <% end %>
</div>