<h1><%= @train_line.name %></h1>

<%= form_tag "/train_lines/#{@train_line.id}", method: :patch do %>
  <div>
    <%= label_tag :name %>:
    <%= text_field_tag :name, @train_line.name %>
  </div>
      
  <div>
    <%= label_tag :user_id %>:
    <%= text_field_tag :user_id, @train_line.user_id %>
  </div>
  
  <%= submit_tag "Submit" %>

<% end %>
